<Window x:Class="M015.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:M015"
        mc:Ignorable="d"
        Title="Ein Fenster" Height="450" Width="300">
    <StackPanel>
		<Menu>
			<MenuItem Header="Datei">
				<MenuItem Header="Item1"/>
				<MenuItem Header="Item2"/>
				<MenuItem Header="Beenden" Click="MenuItem_Click"/>
			</MenuItem>
			<MenuItem Header="Daneben"/>
		</Menu>
		<Button Height="30" Content="Ein Button" Margin="5" Click="Button_Click"/>
		<TextBlock Name="TB" Text="0" TextAlignment="Center"/>
		<ComboBox Name="CB" Margin="5" SelectionChanged="CB_SelectionChanged"/>
		<ListBox Name="LB" Margin="5" SelectionMode="Extended"/>
		<CheckBox Content="CheckBox 1" Margin="5" Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked"/>
		<CheckBox Content="CheckBox 2" Margin="5" Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked" IsChecked="True"/>
		<RadioButton GroupName="RB1" Content="RB1" IsChecked="True"/>
		<RadioButton GroupName="RB1" Content="RB2"/>
		<RadioButton GroupName="RB1" Content="RB3"/>
		<RadioButton GroupName="RB2" Content="RB4"/>
		<RadioButton GroupName="RB2" Content="RB5"/>
	</StackPanel>
</Window>
